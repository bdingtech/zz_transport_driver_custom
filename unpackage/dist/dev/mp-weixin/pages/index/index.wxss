.index {
  height: 100%;
  width: 100%;
  position: absolute;
  background-color: #f6f7f9;
}
.index-header {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  padding: 0 34px;
  height: 117px;
}
.index-header > image {
  width: 67px;
  height: 67px;
  margin-right: 18px;
  flex-shrink: 0;
}
.index-header .info {
  display: flex;
  flex-direction: column;
}
.index-header .info ._h1 {
  height: 48px;
  line-height: 48px;
  font-size: 27px;
  color: #333333;
  font-weight: 500;
}
.index-header .info ._p {
  height: 18px;
  line-height: 18px;
  font-size: 12px;
  color: #9a9b9d;
}
.index-components {
  background: #f7f8fa;
  border-radius: 30px 30px 0 0;
  overflow: hidden;
  padding: 30px 25px;
}
.index-components > ._ol {
  margin-bottom: 17px;
}
.index-components > ._ol > ._li {
  line-height: 20px;
  font-size: 14px;
  color: #909ca4;
  margin-bottom: 10px;
}
.index-components > ._ol > ._ul ._li {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24px;
  width: 100%;
  height: 80px;
  line-height: 90px;
  background: white;
  border-radius: 22px;
  box-shadow: 0px 1px 4px 0px rgba(102, 102, 102, 0.06);
  margin-bottom: 23px;
  box-sizing: border-box;
}
.index-components > ._ol > ._ul ._li ._span {
  width: 200px;
  display: flex;
  justify-content: flex-end;
  margin-right: 10px;
  font-size: 16px;
  color: #595959;
  /* font-weight: bold; */
}
.index-components > ._ol > ._ul ._li .img {
  width: 50px;
  height: 50px;
}
.index-components > ._ol > ._ul ._li .text {
  display: flex;
  align-items: center;
}
.index-components > ._ol > ._ul ._li .text image {
  width: 10rpx;
  height: 18rpx;
}
.index-components ._ol,
.index-components ._li {
  list-style: none;
}

